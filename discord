import config
import discord
from discord.ext import commands

class Esya:
    def __init__(self, ad, marka, kullanim_amaci):
        self.ad = ad
        self.marka = marka
        self.kullanim_amaci = kullanim_amaci
    
    def bilgiler(self):
        return f"**{self.ad}**\nMarka: {self.marka}\nAmaÃ§: {self.kullanim_amaci}"
    
    def __str__(self):
        return f"{self.ad} ({self.marka})"

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='!', intents=intents)

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.event
async def on_message(message):
    if message.author == bot.user:
        return
    
    if message.content.startswith('https://'):
        await message.delete()
        return

@bot.event
async def on_member_join(member):
    # KarÅŸÄ±lama mesajÄ± gÃ¶nderme
    for channel in member.guild.text_channels:
        await channel.send(f'HoÅŸ geldiniz: {member.mention}!')

@bot.command()
async def hello(ctx):
    await ctx.send('Hello!')

@bot.command()
async def giris(ctx):
    await ctx.send('bot artÄ±k Ã§alÄ±ÅŸÄ±yor!')

@bot.command()
async def topla(ctx, a: int = None, b: int = None):
    if a is None or b is None:
        await ctx.send('LÃ¼tfen iki sayÄ± giriniz: !topla <sayÄ±1> <sayÄ±2>')
        return
    await ctx.send(a + b)

@bot.command()
@commands.has_permissions(ban_members=True)
async def ban(ctx, member: discord.Member = None):
    if member:
        if ctx.author.top_role <= member.top_role:
            await ctx.send("EÅŸit veya daha yÃ¼ksek rÃ¼tbeli bir kullanÄ±cÄ±yÄ± banlamak mÃ¼mkÃ¼n deÄŸildir!")
        else:
            await ctx.guild.ban(member)
            await ctx.send(f"KullanÄ±zÄ± {member.name} banlandÄ±")
    else:
        await ctx.send("Bu komut banlamak istediÄŸiniz kullanÄ±cÄ±yÄ± iÅŸaret etmelidir. Ã–rneÄŸin: `!ban @user`")

@bot.command()
@ban.error
async def ban_error(ctx, error):
    if isinstance(error, commands.MissingPermissions):
        await ctx.send("Bu komutu Ã§alÄ±ÅŸtÄ±rmak iÃ§in yeterli izniniz yok.")
    elif isinstance(error, commands.MemberNotFound):
        await ctx.send("KullanÄ±cÄ± bulunamadÄ±!")

@bot.command()
async def help_command(ctx):
    help_text = """
**ğŸ“‹ Mevcut Komutlar:**

`!hello` - SelamlaÅŸma
`!giris` - Bot Ã§alÄ±ÅŸtÄ±ÄŸÄ±nÄ± sÃ¶yler
`!topla <sayÄ±1> <sayÄ±2>` - Ä°ki sayÄ±yÄ± toplar
`!esya <ad> <marka> <kullanÄ±m amacÄ±>` - Yeni eÅŸya oluÅŸturur
`!help` - Bu yardÄ±m mesajÄ±nÄ± gÃ¶sterir
`!ban_members` - Bir kullanÄ±cÄ±yÄ± sunucudan yasaklar
"""
    await ctx.send(help_text)

bot.run(config.token)
